<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @requirement.title %>
</p>

<p>
  <b>Body:</b>
  <%= @requirement.body %>
</p>

<p>
  <b>Parent requirement:</b>
  <%= @requirement.parent_requirement_id %>
</p>


<%= link_to 'Edit', edit_requirement_path(@requirement) %> |
<%= link_to 'Back', requirements_path %>


<%= form_for @requirement.children.build() do |f| %>
  <div><%= f.hidden_field :parent_requirement_id %></div>
  <div class="actions"><%= f.submit "Add child requirement" %></div>
<% end %>